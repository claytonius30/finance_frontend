<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinanceMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinanceMAUI"
    xmlns:views="clr-namespace:FinanceMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FinanceMAUI">

    <Shell.TitleView>
        <views:LogoView />
    </Shell.TitleView>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:UserDetailPage}"
        Route="userview" />

</Shell>
